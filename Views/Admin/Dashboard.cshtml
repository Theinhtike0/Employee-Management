<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="dashboard-container">
        <aside class="sidebar">
            <h4 class="sidebar-header">Leave Application</h4>
            <div class="menu-section">
                <button class="menu-toggle">
                    Employee Profile
                    <i class="fas fa-chevron-down toggle-icon"></i>
                </button>
                <ul class="submenu">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Employee" asp-action="Index"><i class="fas fa-list me-1"></i>Employee Profile</a>
                    </li>
                </ul>
            </div>
            <div class="menu-section">
                <button class="menu-toggle">
                    Leave Master
                    <i class="fas fa-chevron-down toggle-icon"></i>
                </button>
                <ul class="submenu">
                    <li><a asp-controller="LeaveType" asp-action="Index"><i class="fas fa-list me-1"></i>Leave Type</a></li>
                    <li><a asp-controller="LeaveScheme" asp-action="Index"><i class="fas fa-chart-bar me-1"></i>Leave Scheme</a></li>
                    <li><a href="#"><i class="fas fa-history me-1"></i>Leave History</a></li>
                </ul>
            </div>
            
        </aside>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/script.js" asp-append-version="true"></script>
   
</body>
</html>