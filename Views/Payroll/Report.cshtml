@model HR_Products.ViewModels.ReportViewModel

@{
    ViewData["Title"] = "Generate Payroll Report";
}

<h2 class="text-center mb-5">Generate Payroll Report</h2>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="GeneratePayrollReport" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="SelectedEmployeeId" class="control-label"></label>
                @if (Model.IsEmployeeSelectionDisabled)
                {
                    <!-- Display readonly text input for auto-bound user (Bootstrap styling) -->
                    <input type="text" class="form-control" value="@Model.CurrentUserName" readonly />
                    <!-- Hidden input to carry the ID when the form is submitted -->
                    <input type="hidden" asp-for="SelectedEmployeeId" />
                }
                else
                {
                    <!-- Display full dropdown for other roles (Bootstrap styling) -->
                    <select asp-for="SelectedEmployeeId" class="form-control" asp-items="Model.Employees">
                        <option value="">Select Employee</option>
                    </select>
                }
                <span asp-validation-for="SelectedEmployeeId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SelectedYear" class="control-label"></label>
                <select asp-for="SelectedYear" class="form-control" asp-items="Model.Years"></select>
                <span asp-validation-for="SelectedYear" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="SelectedMonth" class="control-label"></label>
                <select asp-for="SelectedMonth" class="form-control" asp-items="Model.Months"></select>
                <span asp-validation-for="SelectedMonth" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Generate Report</button>
                <a class="btn btn-outline-warning btn-md" style="width: 100px;" href="javascript:history.back()" role="button">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}