@model HR_Products.Models.Entitites.Leavescheme
@{
    ViewData["Title"] = "Edit Leave Scheme";
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">New Leave Scheme</h2>
        <form method="post" enctype="multipart/form-data">
            <!-- Employee Code -->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Leave Scheme</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="SCHEME_NAME" required aria-required="true">
                    <span asp-validation-for="SCHEME_NAME" class="text-danger small"></span>
                </div>
            </div>

            <!-- Employee Name -->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Description</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="DESCRIPTION" required aria-required="true">
                    <span asp-validation-for="DESCRIPTION" class="text-danger small"></span>
                </div>
            </div>

            <!-- Submit and Cancel Buttons -->
            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-warning" asp-controller="LeaveScheme" asp-action="Index" role="button">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}