@model HR_Products.Models.Entitites.EmployeeProfile
@{
    ViewData["Title"] = "Edit Employee";
    var defaultProfilePicUrl = Url.Content("~/images/profile/default_profile.png"); 
}

<form method="post" asp-action="Edit" asp-controller="Employee" enctype="multipart/form-data">
    <div class="row">
        
        <div class="col-md-4">
                <div class="card-body text-center">
                    <div id="profilePicContainer" style="height: 200px; width: 200px; border: 2px dashed #dc3545; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto; overflow: hidden;">
                        @if (!string.IsNullOrEmpty(Model.ProfilePic))
                        {
                            <img id="profileImage" src="@Url.Content("~/images/profile/" + Model.ProfilePic)"
                                 alt=""
                                 style="width: 100%; height: 100%; object-fit: cover;" />
                        }
                        else
                        {
                            <span id="noImageText" class="text-muted">No image selected</span>
                        }
                    </div>

                    
                    <input type="hidden" asp-for="ProfilePic" />

                    <div class="mt-3">
                        
                        <input type="file" id="profilePicInput" name="ProfilePicFile" accept="image/*" class="form-control" />
                        <span asp-validation-for="ProfilePic" class="text-danger small"></span>
                    </div>
                </div>
        </div>

        
        <div class="col-md-8 rounded border p-3">
            <h2 class="text-center mb-5">Edit Employee</h2>

            <input type="hidden" asp-for="EmpeId" />

            <div class="row mb-3">
                <label asp-for="EmpeCode" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="EmpeCode" class="form-control">
                    <span asp-validation-for="EmpeCode" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="EmpeName" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="EmpeName" class="form-control">
                    <span asp-validation-for="EmpeName" class="text-danger"></span>
                </div>
            </div>

            
            <div class="row mb-3">
                <label asp-for="PostalCode" class="col-sm-4 col-form-label">Department</label>
                <div class="col-sm-8">
                    <input asp-for="PostalCode" class="form-control">
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Position</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Status">
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="DateOfBirth" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input type="date" asp-for="DateOfBirth" class="form-control">
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="Gender" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <select asp-for="Gender" class="form-select">
                        <option value="M">Male</option>
                        <option value="F">Female</option>
                        <option value="O">Other</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="Email" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input type="email" asp-for="Email" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="PhoneNo" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="PhoneNo" class="form-control">
                    <span asp-validation-for="PhoneNo" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Emergency Contact Name</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="EmgcConctName">
                    <span asp-validation-for="EmgcConctName" class="text-danger small"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Emergency Contact Phone</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="EmgcConctPhone">
                    <span asp-validation-for="EmgcConctPhone" class="text-danger small"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="JobTitle" class="col-sm-4 col-form-label">Role</label>
                <div class="col-sm-8">
                    <input asp-for="JobTitle" class="form-control">
                    <span asp-validation-for="JobTitle" class="text-danger"></span>
                </div>
            </div>


            <div class="row mb-3">
                <label asp-for="JoinDate" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input type="date" asp-for="JoinDate" class="form-control">
                    <span asp-validation-for="JoinDate" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="TerminateDate" class="col-sm-4 col-form-label">Last Date</label>
                <div class="col-sm-8">
                    <input type="date" asp-for="TerminateDate" class="form-control">
                    <span asp-validation-for="TerminateDate" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="City" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="City" class="form-control">
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="State" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="State" class="form-control">
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
            </div>


            <div class="row mb-3">
                <label asp-for="Country" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Country" class="form-control">
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="CreatedAt" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="CreatedAt" class="form-control-plaintext" readonly>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-warning" asp-controller="Employee" asp-action="Index" role="button">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const profilePicInput = document.getElementById('profilePicInput');
            const profileImage = document.getElementById('profileImage');
            const profilePicContainer = document.getElementById('profilePicContainer');
            const noImageText = document.getElementById('noImageText');

            if (profilePicInput) {
                profilePicInput.addEventListener('change', function(event) {
                    const file = event.target.files[0];
                    if (file) {
                        
                        const validTypes = ['image/jpeg', 'image/png', 'image/gif'];
                        if (!validTypes.includes(file.type)) {
                            alert('Please select a valid image file (JPEG, PNG, GIF)');
                            event.target.value = ''; 
                            if (profileImage) profileImage.src = ''; 
                            if (noImageText) noImageText.style.display = 'block'; 
                            return;
                        }

                        
                        const maxSize = 5 * 1024 * 1024; 
                        if (file.size > maxSize) {
                            alert('Image size should not exceed 2MB');
                            event.target.value = ''; 
                            if (profileImage) profileImage.src = ''; 
                            if (noImageText) noImageText.style.display = 'block'; 
                            return;
                        }

                        const reader = new FileReader();

                        reader.onload = function(e) {
                            
                            if (noImageText) noImageText.style.display = 'none';

                            
                            let img = document.getElementById('profileImage');
                            if (!img) {
                                img = document.createElement('img');
                                img.id = 'profileImage';
                                img.alt = 'Profile Picture';
                                img.style.width = '100%';
                                img.style.height = '100%';
                                img.style.objectFit = 'cover';
                                profilePicContainer.appendChild(img);
                            }
                            img.src = e.target.result;

                            
                            profilePicContainer.style.border = 'none';
                        };

                        reader.readAsDataURL(file);
                    } else {
                        
                        if (profileImage && profileImage.src === '') { 
                            if (noImageText) noImageText.style.display = 'block';
                            profilePicContainer.style.border = '2px dashed #dc3545'; 
                        }
                    }
                });
            }

            
            if (profileImage && profileImage.src && profileImage.src.includes("/images/profile/")) {
                if (noImageText) {
                    noImageText.style.display = 'none';
                    profilePicContainer.style.border = 'none'; 
                }
            } else {
                 
                 profilePicContainer.style.border = '2px dashed #dc3545';
                 if (noImageText) noImageText.style.display = 'block';
            }
        });
    </script>
}