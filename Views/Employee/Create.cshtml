@model HR_Products.Models.Entitites.EmployeeProfile
@{
    ViewData["Title"] = "Create Employee";
    var defaultProfilePicUrl = Url.Content("~/images/profile/default_profile.png"); 
}

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-4">
                <div class="card-body text-center">
                    <div id="profilePicContainer" style="height: 200px; width: 200px; border: 2px dashed #dc3545; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto; overflow: hidden;">
                        @if (Model != null && !string.IsNullOrEmpty(Model.ProfilePic))
                        {
                            <img id="profileImage" src="@Url.Content("~/images/profile/" + Model.ProfilePic)"
                                 alt=""
                                 style="width: 100%; height: 100%; object-fit: cover;" />
                        }
                        else
                        {
                            <span id="noImageText" class="text-muted">No image selected</span>
                        }
                    </div>

                    <div class="mt-1">
                        
                        <input type="file" id="profilePicInput" name="ProfilePicFile" accept="image/*" class="form-control" />
                        <span asp-validation-for="ProfilePic" class="text-danger small"></span>
                    </div>
            </div>
        </div>
        <div class="col-md-8 mx-auto rounded border p-3">
            <h2 class="text-center mb-5">New Employee</h2>

            
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Employee Code</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="EmpeCode" required aria-required="true">
                    <span asp-validation-for="EmpeCode" class="text-danger small"></span>
                </div>
            </div>

            
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="EmpeName" required aria-required="true">
                    <span asp-validation-for="EmpeName" class="text-danger small"></span>
                </div>
            </div>

            
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Date of Birth</label>
                <div class="col-sm-8">
                    <input type="date" class="form-control" asp-for="DateOfBirth">
                    <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                </div>
            </div>

            
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Gender</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="Gender" required aria-required="true">
                        <option value="M">Male</option>
                        <option value="F">Female</option>
                        <option value="O">Other</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger small"></span>
                </div>
            </div>

            
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                    <input type="email" class="form-control" asp-for="Email" required aria-required="true">
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
            </div>

            
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Phone Number</label>
                <div class="col-sm-8">
                    <input type="tel" class="form-control" asp-for="PhoneNo">
                    <span asp-validation-for="PhoneNo" class="text-danger small"></span>
                </div>
            </div>

            
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Emergency Contact Name</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="EmgcConctName">
                    <span asp-validation-for="EmgcConctName" class="text-danger small"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Emergency Contact Phone</label>
                <div class="col-sm-8">
                    <input type="tel" class="form-control" asp-for="EmgcConctPhone">
                    <span asp-validation-for="EmgcConctPhone" class="text-danger small"></span>
                </div>
            </div>

            
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Role</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="JobTitle" required aria-required="true">
                        <option value="Admin">Admin</option>
                        <option value="HR-Admin">HR-Admin</option>
                        <option value="Finance-Admin">Finance-Admin</option>
                        <option value="User">User</option>
                    </select>
                    <span asp-validation-for="JobTitle" class="text-danger small"></span>
                </div>
            </div>

            
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Department</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="DeptId" required aria-required="true">
                    <span asp-validation-for="DeptId" class="text-danger small"></span>
                </div>
            </div>

            
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Join Date</label>
                <div class="col-sm-8">
                    <input type="date" class="form-control" asp-for="JoinDate" required aria-required="true">
                    <span asp-validation-for="JoinDate" class="text-danger small"></span>
                </div>
            </div>

            
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Status</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="Status" required aria-required="true">
                        <option value="Active">Active</option>
                        <option value="Inactive">Inactive</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger small"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="TerminateDate" class="col-sm-4 col-form-label">Last Date</label>
                <div class="col-sm-8">
                    <input type="date" asp-for="TerminateDate" class="form-control">
                    <span asp-validation-for="TerminateDate" class="text-danger"></span>
                </div>
            </div>

            
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">City</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="City">
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">State</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="State">
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Postal Code</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="PostalCode">
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Country</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Country">
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
            </div>

            
            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-warning" asp-controller="Employee" asp-action="Index" role="button">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const profilePicInput = document.getElementById('profilePicInput');

            if (profilePicInput) {
                profilePicInput.addEventListener('change', function(event) {
                    const file = event.target.files[0];
                    if (file) {
                        const validTypes = ['image/jpeg', 'image/png', 'image/gif'];
                        if (!validTypes.includes(file.type)) {
                            alert('Please select a valid image file (JPEG, PNG, GIF)');
                            event.target.value = '';
                            return;
                        }

                        const maxSize = 5 * 1024 * 1024; // 5MB
                        if (file.size > maxSize) {
                            alert('Image size should not exceed 2MB');
                            event.target.value = '';
                            return;
                        }

                        const reader = new FileReader();

                        reader.onload = function(e) {
                            const container = document.getElementById('profilePicContainer');
                            const noImageText = document.getElementById('noImageText');

                            if (noImageText) noImageText.remove();

                            let img = document.getElementById('profileImage');
                            if (!img) {
                                img = document.createElement('img');
                                img.id = 'profileImage';
                                img.alt = 'Profile Picture';
                                img.style.width = '100%';
                                img.style.height = '100%';
                                img.style.objectFit = 'cover';
                                container.appendChild(img);
                            }

                            img.src = e.target.result;

                            container.style.border = 'none';
                        };

                        reader.readAsDataURL(file);
                    }
                });
            }
        });
    </script>
}