@model List<HR_Products.Models.Entitites.LeaveType>

<h2 class="text-center mb-5">List of Leave Types</h2> 

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="row mb-5">
    <div class="col">
        <a class="btn btn-primary" asp-action="Create">Add Leave Type</a>
    </div>
    <div class="col text-end">
        <input type="text" id="searchInput" class="form-control" placeholder="Search Leave Type..." />
    </div>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>SN</th> 
            <th>Leave Type</th>
            <th>Description</th>
            <th>Days Per Year</th>
            <th>Accrual Method</th>
            <th>Carry Limit</th>
            <th>Gender Specific</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody id="leaveTypeTableBody">
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.LEAV_TYPE_ID</td> 
                <td>@item.LEAV_TYPE_NAME</td>
                <td>@item.DESCRIPTION</td>
                <td>@item.DEFAULT_DAY_PER_YEAR</td>
                <td>@item.ACCRUAL_METHOD</td>
                <td>@item.CARRY_OVER_LIMIT</td>
                <td>@item.GENDER_SPECIFIC</td>
                <td style="white-space: nowrap">
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.LEAV_TYPE_ID">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.LEAV_TYPE_ID" onclick="return confirm('Are you sure you want to delete this record?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="mt-5 d-flex justify-content-start">
    <a class="btn btn-outline-warning btn-md" style="width: 146px;" asp-controller="Admin" asp-action="Dashboard" role="button">Back</a>
</div>

@section Scripts {
    <script>

    </script>
}