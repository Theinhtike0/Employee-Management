@model HR_Products.Models.Entitites.LeaveType
@{
    ViewData["Title"] = "Create Leave Type";
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">New Leave Type</h2>
        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Leave Type</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="LEAV_TYPE_NAME" required aria-required="true">
                    <span asp-validation-for="LEAV_TYPE_NAME" class="text-danger small"></span>
                </div>
            </div>

            
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Description</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="DESCRIPTION" required aria-required="true">
                    <span asp-validation-for="DESCRIPTION" class="text-danger small"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Is Paid</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="IS_PAID" required aria-required="true">
                        <option value="Y">Yes</option>
                        <option value="N">No</option>
                    </select>
                    <span asp-validation-for="IS_PAID" class="text-danger small"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Default Days </label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="DEFAULT_DAY_PER_YEAR" required aria-required="true">
                    <span asp-validation-for="DEFAULT_DAY_PER_YEAR" class="text-danger small"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Accrual Method</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ACCRUAL_METHOD">
                    <span asp-validation-for="ACCRUAL_METHOD" class="text-danger small"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Carry Limit</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="CARRY_OVER_LIMIT">
                    <span asp-validation-for="CARRY_OVER_LIMIT" class="text-danger small"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Is Active</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="IS_ACTIVE" required aria-required="true">
                        <option value="Y">Yes</option>
                        <option value="N">No</option>
                    </select>
                    <span asp-validation-for="IS_ACTIVE" class="text-danger small"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Approve Require</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="REQUIRE_APPROVAL" required aria-required="true">
                        <option value="Y">Yes</option>
                        <option value="N">No</option>
                    </select>
                    <span asp-validation-for="REQUIRE_APPROVAL" class="text-danger small"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Attach Require</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="ATTACH_REQUIRE" required aria-required="true">
                        <option value="Y">Yes</option>
                        <option value="N">No</option>
                    </select>
                    <span asp-validation-for="ATTACH_REQUIRE" class="text-danger small"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Gender Specific</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="GENDER_SPECIFIC">
                    <span asp-validation-for="GENDER_SPECIFIC" class="text-danger small"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-warning" asp-controller="LeaveType" asp-action="Index" role="button">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}